@model StokTakipProjesi2.Models.Stock

@section Scripts {
    <script>
        function updateTotal() {
            const quantity = parseFloat(document.getElementById('StockCount').value) || 0;
            const price = parseFloat(document.getElementById('Price').value) || 0;
            const total = quantity * price;
            document.getElementById('newTotalValue').innerText = total.toFixed(2) + ' ₺';
        }

        document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('StockCount').addEventListener('input', updateTotal);
            document.getElementById('Price').addEventListener('input', updateTotal);
            updateTotal();
        });
    </script>
}

<div class="container my-4" style="max-width: 900px;">
    <div class="card shadow-sm">
        <div class="card-header d-flex align-items-center">
            <i class="bi bi-pencil-square me-2"></i>
            <span class="fw-bold fs-5">Edit Stock Record</span>
        </div>
        <div class="card-body">
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="StockID" />

                <div class="row mb-3">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <label asp-for="Name" class="form-label">Product Name</label>
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Category" class="form-label">Category</label>
                        <input asp-for="Category" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        <label asp-for="StockCount" class="form-label">Quantity</label>
                        <input asp-for="StockCount" type="number" class="form-control" id="StockCount" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label">Unit Price</label>
                        <div class="input-group">
                            <span class="input-group-text">₺</span>
                            <input asp-for="Price" type="number" class="form-control" id="Price" />
                        </div>
                    </div>
                </div>

                <div class="alert alert-info mb-2">
                    Current Total Value: <strong>₺@((Model.Price * Model.StockCount).ToString("N2"))</strong>
                </div>
                <div class="alert alert-success mb-4">
                    New Total Value: <strong id="newTotalValue">₺@((Model.Price * Model.StockCount).ToString("N2"))</strong>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="bi bi-pencil-square"></i> Update
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
